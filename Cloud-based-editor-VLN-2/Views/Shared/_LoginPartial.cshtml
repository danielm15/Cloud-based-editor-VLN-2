@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="javascript:;" class="dropdown-toggle projectButton" data-toggle="dropdown" role="button" id="notifyButton"><i class="glyphicon glyphicon-bell grow"></i><span class="badge" id="NotifyCount"></span></a>

            <ul class="dropdown-menu" role="menu" id="inviteDropDown">
                <li></li>
            </ul>

        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <i class="glyphicon glyphicon-user"></i> @User.Identity.GetUserName() <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="@Url.Action("Index", "Manage")">Manage account</a></li>
                <li><a href="@Url.Action("Support", "Home")">Support</a></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()" id="logOff">Log off</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
