@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <h1>Code Cloud</h1>
    <p class="frontPageText">
        Code Cloud is a group project for the class Semester Project 2 in Reykjavik University
    </p>
    <p class="frontPageText">
        Code Cloud is a cloud based editor for programmers. It gives programmers the option to work on code wherever they are and wihout having to install some IDE's.
    </p>

    <div class="imageDiv">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/Img/indridi.jpg" alt="Indridi" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Content/Img/1.png" alt="one" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Content/Img/2.png" alt="zwei" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>



        <div class="mainFeatures">
            <section class="mainFeaturesBox">
                <p class="frontPageText boxText"> Create your own projects and invite other users to participate in them </p>
            </section>
            <section class="mainFeaturesBox">
                <p class="frontPageText boxText"> Different types of projects. All major languages included </p>
            </section>
            <section class="mainFeaturesBox">
                <p class="frontPageText boxText"> Work in the same file and see changes in realtime from other users </p>
            </section>
        </div>
    </div>
</div>
