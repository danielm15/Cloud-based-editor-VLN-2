@model Cloud_based_editor_VLN_2.Models.Entities.Project
@{
    ViewBag.Title = "_AdminAbandonProject";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><strong>Abandon project</strong></h4>
        </div>
        <div class="modal-body" id="deleteProjectModal">
            <p> You are the only user of this project do you want to delete it?</p>
            <p>
                Project name: <strong>@Model.Name</strong>
            </p>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="cancelModalBtn" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="abandonModalBtn" onclick="deleteProjectAjax(@Model.ID)" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>

</div>