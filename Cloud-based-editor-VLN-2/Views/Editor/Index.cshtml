@model Cloud_based_editor_VLN_2.Models.ViewModels.DocumentViewModel
@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    bodyMargin();
</script>

<nav class="projectNav" id="sideNav">
    <div href="#" class="navToggle"> <div class="verticalText" onclick="showNavBar();">Navigation</div> </div>
    <ul>
    @foreach (Cloud_based_editor_VLN_2.Models.Entities.Document item in Model.Documents) {
        <li>@Html.ActionLink(item.Name, "Index", "Editor", new { projectID = item.ProjectID, documentID = item.ID }, new { @class = "navigationLink" }) </li>
    }
    </ul>
</nav>
<div class="editorContent" id="editorContentId">
   <h2>@Model.Doc.Name</h2>
    <div id="editorID">Editor</div>
</div>

<script>
    var editor = ace.edit("editorID");
    editor.setTheme("ace/theme/twilight");
    editor.session.setMode("ace/mode/csharp");
</script>


