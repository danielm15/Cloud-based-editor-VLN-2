@model Cloud_based_editor_VLN_2.Models.ViewModels.DocumentViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Project Files</h2>
<p>@Html.ActionLink("Create new file", "Create", new { projectID = Model.CurrProjectID }, new { @type = "button", @class = "btn btn-default" })</p>
    
<ul style="list-style: none">
    <li>
        <div class="row">
            <div class="col-md-4">File Name</div>
            <div class="col-md-4">Created By</div>
            <div class="col-md-2">Date Created</div>
            <div class="col-md-2">Type</div>
        </div>
    </li>
    @foreach (Cloud_based_editor_VLN_2.Models.Entities.Document item in Model.Documents) {
        <li>
            <div>
                <div class="row documentListItem">
                    <a href="@Url.Action("Index", "Editor" , new { projectID = item.ID, documentID = item.ProjectID })" class="clickableDiv" />
                    <div class="col-md-4">
                        @Html.DisplayFor(modelItem => item.Name)
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Type)
                    </div>
                </div>
                <div class="btn-default optionsButton">
                    <div class="btn dropdown-toggle DropDownButton" data-toggle="dropdown">
                        Options
                        <span class="caret"></span>
                    </div>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Rename", "Rename", new { projectID = item.ID }, new { @type = "a", @tabindex = "-1" })</li>
                        <li>@Html.ActionLink("Download", "Download", new { projectID = item.ID }, new { @type = "a", @tabindex = "-1" })</li>
                        <li>@Html.ActionLink("Delete", "Delete", new { projectID = item.ID }, new { @type = "a", @tabindex = "-1" })</li>
                    </ul>
                </div>
            </div>
        </li>
    }
</ul>

