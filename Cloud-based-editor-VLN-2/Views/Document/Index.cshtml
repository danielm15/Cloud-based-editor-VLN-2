                    <label for="fileTypes" class="inputLablel">File type</label> <br/>
                    <input list="fileTypes" name="fileTypes" placeholder="Choose your file type" id="fileTypeInput" /> <br />
                    <datalist id="fileTypes">
                        <option value="txt"/>
                        <option value="css"/>
                        <option value="html"/>
                        <option value="cs"/>
                        <option value="js"/>
                    </datalist> 
                    <input type="submit" value="Create file" id="createFileSubmitBtn" class="btn btn-warning" />
                </form>
            </li>
            <!--<li> @Html.ActionLink("Create new file", "Create", new { projectID = Model.CurrProjectID }, new { @type = "button", @class = "btn btn-default" }) </li>-->
        </ul>
    </div>
</div>
