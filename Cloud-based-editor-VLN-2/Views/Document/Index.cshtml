 @model Cloud_based_editor_VLN_2.Models.ViewModels.DocumentViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Project Files</h2>
<p>@Html.ActionLink("Create new file", "Create", new { projectID = Model.CurrProjectID }, new { @type = "button", @class = "btn btn-default" })</p>
    
<ul style="list-style: none">
    <li>
        <div class="row">
            <div class="col-md-3">File Name</div>
            <div class="col-md-3">Created By</div>
            <div class="col-md-2">Date Created</div>
            <div class="col-md-1">Type</div>
        </div>
    </li>
    @foreach (Cloud_based_editor_VLN_2.Models.Entities.Document item in Model.Documents) {
        <li>
            <div>
                <div class="row documentListItem">
                    <a href="@Url.Action("Index", "Editor", new { projectID = item.ProjectID, documentID = item.ID   })" class="clickableDiv">
                        <div class="col-md-3">
                            @Html.DisplayFor(modelItem => item.Name)
                        </div>
                        <div class="col-md-3">
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </div>
                        <div class="col-md-2">
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </div>
                        <div class="col-md-1">
                            @Html.DisplayFor(modelItem => item.Type)
                        </div>
                    </a>

                    <div class="col-md-3">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Options
                                <span class="caret"></span>
                            </button>

                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Rename", "Rename", new { projectID = item.ID }, new { @type = "a", @tabindex = "-1" })</li>
                                <li>@Html.ActionLink("Download", "DownloadFile", new { documentID = item.ID }, new { @type = "a", @tabindex = "-1" })</li>
                                <li>@Html.ActionLink("Delete", "Delete", new { projectID = item.ID }, new { @type = "a", @tabindex = "-1" })</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>
