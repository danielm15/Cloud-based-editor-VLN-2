@model Cloud_based_editor_VLN_2.Models.Entities.Project
@{
    ViewBag.Title = "_deleteProjectConfirm";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><strong>Delete Project</strong></h4>
        </div>
        <div class="modal-body" id="deleteProjectModal">
            <p> Are you sure you want to delete this project? </p>
            <p> 
                Project name: <strong>@Model.Name</strong> 
                , Created on: <strong>@Model.DateCreated</strong>
            </p>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="cancelModalBtn" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteModalBtn" onclick="deleteProjectAjax(@Model.ID)">Delete</button>
            </div>
        </div>
    </div>

</div>
