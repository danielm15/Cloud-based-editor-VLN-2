@model Cloud_based_editor_VLN_2.Models.Entities.Project

@{
    ViewBag.Title = "Index";
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Invite to project: <strong>@(Model.Name)</strong></h4>
            <h6 id="myHeaderMessage">Search by username or email adresss</h6>
        </div>
        <div class="modal-body" id="InviteUserModal">   
            <form id="InviteUserForm">
                @Html.HiddenFor(model => model.ID)
                <input type="text" name="inputUser" id="userListInput" autocomplete="off" onkeyup="populateList(this)" />
                <div>
                    <ul id="usersAutoComplete"></ul>
                </div>
            </form>
        </div>
        <div class="modal-footer" id="footerUpdateID">
            <button type="button"  class="btn btn-default" onclick="submitInviteName()" id="InviteUserSubmitBtn">Invite</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
