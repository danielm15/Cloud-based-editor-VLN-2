@model Cloud_based_editor_VLN_2.Models.Entities.Project

@{
    ViewBag.Title = "_RenameProject";
}
<div class="modal-dialog">
    <div class="modal-content" >
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Rename project:  <strong>@Model.Name</strong></h4>
        </div>
        <div class="modal-body" id="RenameModalBody">
            <form id="myForm">
                @Html.HiddenFor(model => model.ID)
                @Html.LabelFor(model => model.Name, new { id = "nameLbl"})
                @Html.TextBoxFor(model => model.Name,  new { id = "projectTextBoxID" })
                <div class="text-danger" id="RenameProjectErrorDiv">

                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" onclick="submitUpdatedName()" id="RenameProjectSubmit">Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>

</div>
