@model Cloud_based_editor_VLN_2.Models.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Projects</h2>
<p>@Html.ActionLink("Create new project", "AddProject", new { ownerID = Model.CurrUserID }, new { @type = "button", @class = "btn btn-default" })</p>
<div class="row">

    @foreach (Cloud_based_editor_VLN_2.Models.Entities.Project item in Model.Projects) {
            <div class="col-sm-6 col-md-4">
                
                <div class="panel panel-default" style="height:300px;">
                    <a href="@Url.Action("Index","Document", new { projectID = item.ID})">
                        <div class="panel-heading">
                            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        </div>
                    
                    <div class="panel-body">
                        <p>Id: @Html.DisplayFor(modelItem => item.ID)</p>
                   
                             @*<p>@Html.ActionLink("Open", "Index", "Document", new { projectID = item.ID }, new { @type = "div", @class = "btn btn-default" })</p>*@
                   
                    </div>
                        </a>
                    <div class="panel-footer">
                        @Html.ActionLink("Open", "Index", "Document", new { projectID = item.ID }, new { @type = "div", @class = "btn btn-default" })
                    </div> 

                    </div>
                    </div>
            }
                </div>


