@model Cloud_based_editor_VLN_2.Models.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Projects</h2>
<p>@Html.ActionLink("Create new project", "AddProject", new { ownerID = Model.CurrUserID }, new { @type = "button", @class = "btn btn-default" })</p>
<div class="row">

    @foreach (Cloud_based_editor_VLN_2.Models.Entities.Project item in Model.Projects) {
            <div class="col-md-4">
                <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                @*<p>@Html.DisplayFor(modelItem => item.Description, new { })</p>
                    <p>Price: @Html.DisplayFor(modelItem => item.Price)</p>
                    <p>Quantity: @Html.DisplayFor(modelItem => item.Quantity)</p>*@
                Id: @Html.DisplayFor(modelItem => item.ID)
                <div class="row">
                    <div class="col-md-4 col-md-offset-2">
                        @Html.ActionLink("Open", "Index", "Document", new { projectID = item.ID }, new { @type = "div", @class = "btn btn-default" })
                    </div>
                    <div class="col-md-4 col-md-pull-1">
                        <div class="btn-default">
                            <div class="btn dropdown-toggle" data-toggle="dropdown">
                                Options
                                @*<span class="caret"></span>*@
                            </div>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Rename", "Rename", new { projectID = item.ID }, new { @type = "a", @tabindex = "-1" })</li>
                                <li>@Html.ActionLink("Delete", "Delete", new { projectID = item.ID }, new { @type = "a", @tabindex = "-1" })</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
    }
</div>

